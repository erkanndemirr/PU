generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
 

  username  String   @unique   // ðŸ‘ˆ benzersiz kullanÄ±cÄ± adÄ±
  firstName String
  lastName  String

  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())

   
  topics    Topic[]
  posts     Post[]
  postLikes PostLike[]
  followers Follow[] @relation("followers")
  following Follow[] @relation("following")
}

model Follow {
  id          Int  @id @default(autoincrement())
  followerId  Int
  followingId Int

  follower  User @relation("following", fields: [followerId], references: [id])
  following User @relation("followers", fields: [followingId], references: [id])

  @@unique([followerId, followingId]) // aynÄ± kullanÄ±cÄ±yÄ± 2 kere takip edemez
}
model Topic {
  id            Int      @id @default(autoincrement())
  title         String
  topicContent  String?  @db.Text
  
  // ðŸ†• Yeni Eklenen Alanlar
  category      String?  // Teknoloji, Seyahat vb.
  country       String?  // USA, Turkey vb.
  state         String?  // Virginia, Ä°stanbul vb.
  imageUrl      String?  @db.Text // BaÅŸlÄ±k gÃ¶rseli URL'si
  
  createdAt     DateTime @default(now())

  authorId      Int
  author        User     @relation(fields: [authorId], references: [id])

  posts         Post[]
}

model Post {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())

  authorId  Int
  author    User     @relation(fields: [authorId], references: [id])

  topicId   Int
  topic     Topic    @relation(fields: [topicId], references: [id])
  
  likes     PostLike[]
}

model PostLike {
  id      Int  @id @default(autoincrement())

  userId  Int
  postId  Int

  user    User @relation(fields: [userId], references: [id])
  post    Post @relation(fields: [postId], references: [id])

  @@unique([userId, postId])
}


enum Role {
  USER
  ADMIN
}
